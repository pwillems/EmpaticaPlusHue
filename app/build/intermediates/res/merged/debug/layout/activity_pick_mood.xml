<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.philips.lighting.quickstart.PickMood"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/layout_pickAmood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.56"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.32"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_Tense"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tense" />

            <ImageButton
                android:id="@+id/btn_Irritated"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/irritated" />

            <ImageButton
                android:id="@+id/btn_Cheerful"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/cheerfull" />

            <ImageButton
                android:id="@+id/btn_Exited"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/exited" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.49"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_Bored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bored" />

            <ImageButton
                android:id="@+id/btn_Gloomy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/gloomy" />

            <ImageButton
                android:id="@+id/btn_Calm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calm" />

            <ImageButton
                android:id="@+id/btn_Relaxed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/relaxed" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.56"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_neutral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_input_neutral" />

            <Button
                android:id="@+id/btn_cozy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_input_cozy" />

            <Button
                android:id="@+id/btn_concentration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_input_concentration" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/e4Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_e4" />

            <Button
                android:id="@+id/btn_ShowPick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_show_pick" />

            <Button
                android:id="@+id/btn_HidePick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_hide_pick"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_manualpeak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_manual_peak" />
        </LinearLayout>

        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_press_e4" />

    </LinearLayout>

</LinearLayout>
